{
	"extends": "@repo/tsconfig/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"module": "ESNext",
		"target": "ES2022",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"skipLibCheck": true,
		"jsx": "preserve"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
