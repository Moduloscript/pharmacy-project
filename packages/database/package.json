{
	"dependencies": {
		"@prisma/client": "^6.3.1",
		"@repo/config": "workspace:*",
		"decimal.js": "^10.6.0",
		"dotenv": "^16.4.7",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "22.13.5",
		"dotenv-cli": "^8.0.0",
		"prisma": "^6.3.1",
		"prisma-json-types-generator": "^3.2.2",
		"rimraf": "^6.1.2",
		"zod-prisma-types": "^3.3.5"
	},
	"main": "./index.ts",
	"name": "@repo/database",
	"scripts": {
		"generate": "pnpm exec tsx generate-all.ts",
		"postinstall": "pnpm generate",
