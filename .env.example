# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"
DIRECT_URL="postgresql://user:password@localhost:5432/dbname"

# Redis (for queue processing)
# Format: redis://[username]:[password]@[host]:[port]/[database]
# For local development without auth: redis://localhost:6379
# For production with auth: redis://default:YOUR_REDIS_PASSWORD@your-redis-host.com:6379
REDIS_URL="redis://localhost:6379"

# Nigerian Payment Gateways
# Flutterwave (Primary Gateway - 1.4% + ₦50)
FLUTTERWAVE_PUBLIC_KEY="FLWPUBK_TEST-..."
FLUTTERWAVE_SECRET_KEY="FLWSECK_TEST-..."
FLUTTERWAVE_ENCRYPTION_KEY="FLWSECK_TEST-..."  # For enhanced security
FLUTTERWAVE_WEBHOOK_SECRET="your_flutterwave_webhook_secret"

# OPay (Secondary Gateway - 1.5%)
OPAY_SECRET_KEY="your_opay_secret_key"
OPAY_MERCHANT_ID="your_opay_merchant_id"
OPAY_WEBHOOK_SECRET="your_opay_webhook_secret"

# Paystack (Tertiary Gateway - 1.5% + ₦100)
PAYSTACK_PUBLIC_KEY="pk_test_your_paystack_public_key"
PAYSTACK_SECRET_KEY="sk_test_your_paystack_secret_key"
PAYSTACK_WEBHOOK_SECRET="your_paystack_webhook_secret"
PAYSTACK_BASE_URL="https://api.paystack.co"  # Production: https://api.paystack.co

# Payment Configuration
PAYMENT_WEBHOOK_URL="https://your-domain.com/api/payments/webhook"
PAYMENT_CALLBACK_URL="https://your-domain.com/api/payments/callback"
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_LOGO_URL="https://your-domain.com/logo.png"
NEXT_PUBLIC_CURRENCY="NGN"
NEXT_PUBLIC_CURRENCY_SYMBOL="₦"

# SMS Provider (Termii)
TERMII_API_KEY="your_termii_api_key_here"
SMS_API_KEY="your_termii_api_key_here"  # alias
TERMII_SENDER_ID="YourSender"
SMS_SENDER_ID="YourSender"  # alias
TERMII_WEBHOOK_SECRET="your_webhook_secret_here"

# Test Configuration
TEST_PHONE_NUMBER="+234XXXXXXXXX"  # Your test phone number
BASE_URL="http://localhost:3000"  # Your API base URL

# Email Provider (optional)
